             class="org.jboss.ide.eclipse.as.ui.actions.DeployHandler"
             commandId="org.jboss.ide.eclipse.as.ui.actions.deploy">
             <activeWhen>
				<with variable="selection">
					<iterate ifEmpty="false" operator="and">
						<adapt type="org.eclipse.core.resources.IResource">
							<test property="org.jboss.ide.eclipse.as.ui.deployable" />
						</adapt>
					</iterate>
				</with>
             </activeWhen>
       </handler>
       <handler
             class="org.jboss.ide.eclipse.as.ui.actions.UndeployHandler"
             commandId="org.jboss.ide.eclipse.as.ui.actions.undeploy">
             <activeWhen>
				<with variable="selection">
					<iterate ifEmpty="false" operator="and">
						<adapt type="org.eclipse.core.resources.IResource">
							<not>								
								<test property="org.jboss.ide.eclipse.as.ui.deployable" />
							</not>
						</adapt>
					</iterate>
				</with>
             </activeWhen>
       </handler>
