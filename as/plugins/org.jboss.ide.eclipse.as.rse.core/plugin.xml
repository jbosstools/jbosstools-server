<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.jboss.ide.eclipse.as.core.behaviourExtension">
      <behaviour
            name="%RSEMethodName"
            publishMethod="org.jboss.ide.eclipse.as.rse.core.RSEPublishMethod"
            serverTypes="org.jboss.ide.eclipse.as.systemCopyServer"
            typeId="rse">
      </behaviour>
      <behaviour
            behaviourDelegate="org.jboss.ide.eclipse.as.rse.core.RSEBehaviourDelegate"
            launchDelegate="org.jboss.ide.eclipse.as.rse.core.RSEJBossStartLaunchDelegate"
            name="%RSEMethodName"
            publishMethod="org.jboss.ide.eclipse.as.rse.core.RSEPublishMethod"
            serverTypes="%ServerTypesJBoss6OrLower"
            typeId="rse">
      </behaviour>
      <behaviour
            behaviourDelegate="org.jboss.ide.eclipse.as.rse.core.RSEJBoss7BehaviourDelegate"
            launchDelegate="org.jboss.ide.eclipse.as.rse.core.RSEJBoss7StartLaunchDelegate"
            name="%RSEMethodName"
            publishMethod="org.jboss.ide.eclipse.as.rse.core.RSEPublishMethod"
            serverTypes="%ServerTypesJBoss7"
            typeId="rse">
      </behaviour>
      <behaviour
            behaviourDelegate="org.jboss.ide.eclipse.as.rse.core.RSEWildfly8BehaviourDelegate"
            launchDelegate="org.jboss.ide.eclipse.as.rse.core.RSEJBoss7StartLaunchDelegate"
            name="%RSEMethodName"
            publishMethod="org.jboss.ide.eclipse.as.rse.core.RSEPublishMethod"
            serverTypes="%ServerTypesWildfly8"
            typeId="rse">
      </behaviour>
   </extension>
   <!-- NEW_SERVER_ADAPTER  Add the new RSE behaviour delegate if needed for the new server above this line -->
   
   
   
   <extension
         point="org.jboss.ide.eclipse.as.wtp.core.serverSubsystem">
      <subsystem
            system="deploymentOptions"
            id="deploymentOptions.rse.default"
            name="Server Deployment Settings (RSE)"
            class="org.jboss.ide.eclipse.as.rse.core.subsystems.RSEDeploymentOptionsController">
         <properties>
            <property
                  key="target"
                  value="rse">
            </property>
         </properties>
      </subsystem>
      <subsystemMapping
            id="deploymentOptions.rse.default"
            mappedId="deploymentOptions.rse"
            serverTypes="%AllJBTServerTypes">
      </subsystemMapping>
      
      
      <subsystem
            system="filesystem"
            id="filesystem.rse.default"
            name="Filesystem (RSE)"
            class="org.jboss.ide.eclipse.as.rse.core.subsystems.RSEFilesystemController">
         <properties>
            <property key="target" value="rse"></property>
         </properties>
      </subsystem>
      <subsystemMapping
            id="filesystem.rse.default"
            mappedId="filesystem.rse"
            serverTypes="%AllJBTServerTypes">
      </subsystemMapping>
      
      
      <subsystem
            system="serverDetails"
            id="serverDetails.rse.default"
            name="Server Details (RSE)"
            class="org.jboss.ide.eclipse.as.rse.core.RSEServerModeDetails">
         <properties>
            <property key="target" value="rse"></property>
         </properties>
      </subsystem>
      <subsystemMapping
            id="serverDetails.rse.default"
            mappedId="serverDetails.rse"
            serverTypes="%AllJBTServerTypes">
      </subsystemMapping>
      
      <subsystem
            system="launch"
            id="launch.standard.rse.default"
            name="Launch JBoss Server (RSE)"
            class="org.jboss.ide.eclipse.as.rse.core.subsystems.RSEJBossLaunchController">
         <properties>
            <property key="target" value="rse"></property>
         </properties>
      </subsystem>
      <subsystemMapping
            id="launch.standard.rse.default"
            mappedId="launch.standard.rse"
            serverTypes="%AllJBossServerTypes">
      </subsystemMapping>
            
      
      <subsystem
            system="shutdown"
            id="shutdown.rse.commandline.default"
            name="Shutdown Server (Remote Command Line)"
            class="org.jboss.ide.eclipse.as.rse.core.subsystems.RSECommandLineShutdownController">
         <properties>
            <property key="target" value="rse"></property>
         </properties>
      </subsystem>
      <subsystemMapping
            id="shutdown.rse.commandline.default"
            mappedId="shutdown.rse.default"
            serverTypes="%ServerTypesJBoss6OrLower">
      </subsystemMapping>
	</extension>
	
	<extension
          point="org.jboss.ide.eclipse.as.wtp.core.serverProfile">
       <serverProfile id="rse" serverTypes="%AllJBTServerTypes">
          <subsystem system="deploymentOptions" subsystem="deploymentOptions.rse"/>
          <subsystem system="serverDetails" subsystem="serverDetails.rse"/>
          <subsystem system="filesystem" subsystem="filesystem.rse"/>
       </serverProfile>
       <serverProfile id="rse" serverTypes="%AllJBossServerTypes">
       	  <initializer class="org.jboss.ide.eclipse.as.rse.core.subsystems.RSEProfileInitializer"/>
          <subsystem system="launch" subsystem="launch.standard.rse"/>
          <subsystem system="publish" subsystem="publish.filesystem.default"/> 
       </serverProfile>
       <serverProfile id="rse" serverTypes="%ServerTypesJBoss6OrLower">
          <subsystem system="shutdown" subsystem="shutdown.rse.default"/>
       </serverProfile>
    </extension>
	
	
</plugin>
