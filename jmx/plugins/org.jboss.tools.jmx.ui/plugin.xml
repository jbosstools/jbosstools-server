<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension-point id="org.jboss.tools.jmx.ui.attribute.controls" name="Attribute Controls" schema="schema/attributeControls.exsd"/>
   <extension-point id="org.jboss.tools.jmx.ui.attribute.bindings" name="Attribute Bindings" schema="schema/attributeBindings.exsd"/>
   <extension-point id="org.jboss.tools.jmx.ui.providerUI" name="Connection Provider UI" schema="schema/providerUI.exsd"/>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="%ViewCategory_JMX"
            id="org.jboss.tools.jmx.ui.views">
      </category>
      <view
            category="org.jboss.tools"
            class="org.jboss.tools.jmx.ui.internal.views.navigator.JMXNavigator"
            icon="icons/releng_gears.gif"
            id="org.jboss.tools.jmx.ui.internal.views.navigator.MBeanExplorer"
            name="%MBeanExplorer.name"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewer
            viewerId="org.jboss.tools.jmx.ui.internal.views.navigator.MBeanExplorer">
      </viewer>
      <viewerContentBinding
            viewerId="org.jboss.tools.jmx.ui.internal.views.navigator.MBeanExplorer">
         <includes>
            <contentExtension
                  isRoot="true"
                  pattern="org.jboss.tools.jmx.ui.internal.views.navigator.root">
            </contentExtension>
            <contentExtension
                  pattern="org.jboss.tools.jmx.ui.internal.views.navigator.JMXLinkHelper">
            </contentExtension>
            <contentExtension
                  pattern="org.jboss.tools.jmx.ui.internal.views.navigator.queryFilter">
            </contentExtension>
         </includes>
      </viewerContentBinding>
      <viewerActionBinding
            viewerId="org.jboss.tools.jmx.ui.internal.views.navigator.MBeanExplorer">
         <includes>
            <actionExtension
                  pattern="org.jboss.tools.jmx.ui.internal.views.navigator.actionProvider">
            </actionExtension>
         </includes>
      </viewerActionBinding>
      <dragAssistant
            class="org.jboss.tools.jmx.ui.internal.views.navigator.NavigatorDragAdapterAssistant"
            viewerId="org.jboss.tools.jmx.ui.internal.views.navigator.MBeanExplorer">
      </dragAssistant>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.linkHelper">
      <linkHelper
            class="org.jboss.tools.jmx.ui.internal.views.navigator.JMXLinkHelper"
            id="org.jboss.tools.jmx.ui.internal.views.navigator.JMXLinkHelper">
         <selectionEnablement>
            <or>
               <instanceof
                     value="org.jboss.tools.jmx.core.IConnectionWrapper">
               </instanceof>
               <instanceof
                     value="org.jboss.tools.jmx.commons.tree.Node">
               </instanceof>
               <instanceof
                     value="org.jboss.tools.jmx.core.MBeanFeatureInfoWrapper">
               </instanceof>
            </or>
         </selectionEnablement>
         <editorInputEnablement>
            <or>
               <instanceof
                     value="java.lang.Object">
               </instanceof>
            </or>
         </editorInputEnablement>
      </linkHelper>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <navigatorContent
            activeByDefault="true"
            contentProvider="org.jboss.tools.jmx.ui.internal.views.navigator.MBeanExplorerContentProvider"
            icon="icons/sample.gif"
            id="org.jboss.tools.jmx.ui.internal.views.navigator.root"
            labelProvider="org.jboss.tools.jmx.ui.internal.views.navigator.MBeanExplorerLabelProvider"
            name="MBeans"
            priority="normal">
         <triggerPoints>
            <or>
               <instanceof
                     value="org.jboss.tools.jmx.core.tree.Node">
               </instanceof>
               <instanceof
                     value="org.jboss.tools.jmx.core.IConnectionProvider">
               </instanceof>
               <instanceof
                     value="org.jboss.tools.jmx.ui.internal.views.navigator.MBeanExplorerContentProvider$DelayProxy">
               </instanceof>
               <instanceof
                     value="org.jboss.tools.jmx.core.MBeanFeatureInfoWrapper">
               </instanceof>
               <instanceof
                     value="org.eclipse.ui.IViewPart">
               </instanceof>
               <instanceof
                     value="org.jboss.tools.jmx.core.IConnectionWrapper">
               </instanceof>
            </or>
         </triggerPoints>
         <possibleChildren>
            <or>
               <instanceof
                     value="org.jboss.tools.jmx.commons.tree.Node">
               </instanceof>
               <instanceof
                     value="org.jboss.tools.jmx.core.IConnectionProvider">
               </instanceof>
               <instanceof
                     value="org.jboss.tools.jmx.ui.internal.views.navigator.MBeanExplorerContentProvider$DelayProxy">
               </instanceof>
               <instanceof
                     value="org.jboss.tools.jmx.core.MBeanFeatureInfoWrapper">
               </instanceof>
               <instanceof
                     value="org.jboss.tools.jmx.core.IConnectionWrapper">
               </instanceof>
            </or>
         </possibleChildren>
         <dropAssistant
               class="org.jboss.tools.jmx.ui.internal.views.navigator.NavigatorDropAdapterAssistant"
               id="org.jboss.tools.jmx.ui.dropAssistant">
            <possibleDropTargets>
                           <or>
               <adapt
                     type="java.util.Collection">
                  <count
                        value="0">
                  </count>
               </adapt>
               <instanceof
                     value="org.jboss.tools.jmx.commons.tree.Node">
               </instanceof>
            </or>
			</possibleDropTargets>
         </dropAssistant>
      </navigatorContent>
      <actionProvider
            class="org.jboss.tools.jmx.ui.internal.views.navigator.ActionProvider"
            id="org.jboss.tools.jmx.ui.internal.views.navigator.actionProvider">

         <enablement>
            <or>
               <adapt
                     type="java.util.Collection">
                  <count
                        value="0">
                  </count>
               </adapt>
               <instanceof
                     value="org.jboss.tools.jmx.core.IConnectionWrapper">
               </instanceof>
               <instanceof
                     value="org.jboss.tools.jmx.commons.tree.Node">
               </instanceof>
               <instanceof
                     value="org.jboss.tools.jmx.core.MBeanFeatureInfoWrapper">
               </instanceof>
            </or>
         </enablement>
      </actionProvider>
      <commonFilter
            activeByDefault="true"
            class="org.jboss.tools.jmx.ui.internal.views.navigator.QueryContribution$QueryFilter"
            description="A filter which uses the text box provided in the view"
            id="org.jboss.tools.jmx.ui.internal.views.navigator.queryFilter"
            name="Query Filter">
      </commonFilter>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="MBean Editor"
            id="org.jboss.tools.jmx.ui.internal.editors.MBeanEditor"
            class="org.jboss.tools.jmx.ui.internal.editors.MBeanEditor"
            extensions="jmx"
            icon="icons/releng_gears.gif">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
         <actionSet
            label="%MBeanActionSet.label"
            description="%MBeanActionSet.description"
            visible="false"
            id="org.jboss.tools.jmx.ui.MBeanActionSet">
           <action
               id="openMBean"
               class="org.jboss.tools.jmx.ui.internal.actions.OpenMBeanAction"
               definitionId="org.jboss.tools.jmx.ui.navigate.open.mbean"
               label="%OpenMBeanAction.label"
               menubarPath="navigate/open.ext2"
               tooltip="%OpenMBeanAction.tooltip">
         </action>
           <action
                 class="org.jboss.tools.jmx.ui.internal.actions.RefreshAction"
                 definitionId="org.jboss.tools.jmx.ui.navigate.refresh"
                 id="refresh"
                 label="%RefreshAction.label"
                 menubarPath="navigate/open.ext2"
                 tooltip="%RefreshAction.tooltip">
           </action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.jboss.tools.jmx.ui.internal.perspectives.JMXPerspective"
            icon="icons/releng_gears.gif"
            id="org.jboss.tools.jmx.ui.perspectives.JMXPerspective"
            name="JMX">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.jboss.tools.jmx.ui.perspectives.JMXPerspective">
           <actionSet
               id="org.jboss.tools.jmx.ui.MBeanActionSet" />
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            name="%ActionDefinition.openMBean.name"
            description="%ActionDefinition.openMBean.description"
            categoryId="org.eclipse.ui.category.navigate"
            id="org.jboss.tools.jmx.ui.navigate.open.mbean">
      </command>
      <command
            categoryId="org.eclipse.ui.category.navigate"
            description="%ActionDefinition.refresh.description"
            id="org.jboss.tools.jmx.ui.navigate.refresh"
            name="%ActionDefinition.refresh.name">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
           sequence="M1+M2+M"
           commandId="org.jboss.tools.jmx.ui.navigate.open.mbean"
           schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"/>
      <key
            commandId="org.jboss.tools.jmx.ui.navigate.refresh"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+R">
      </key>
   </extension>
   <extension
         point="org.jboss.tools.jmx.ui.attribute.controls">
      <control
            id="org.jboss.tools.jmx.ui.attribute.displays.Text"
            class="org.jboss.tools.jmx.ui.internal.controls.TextControlFactory"
		type="java.lang.String">
      </control>
      <control
            id="org.jboss.tools.jmx.ui.attribute.displays.Array"
            class="org.jboss.tools.jmx.ui.internal.controls.ArrayControlFactory"
            type="java.lang.reflect.Array">
      </control>
      <control
            id="org.jboss.tools.jmx.ui.attribute.displays.Boolean"
            class="org.jboss.tools.jmx.ui.internal.controls.BooleanControlFactory"
            type="java.lang.Boolean">
      </control>
      <control
            id="org.jboss.tools.jmx.ui.attribute.displays.Collection"
            class="org.jboss.tools.jmx.ui.internal.controls.CollectionControlFactory"
            type="java.util.Collection">
      </control>
      <control
            id="org.jboss.tools.jmx.ui.attribute.displays.Map"
            class="org.jboss.tools.jmx.ui.internal.controls.MapControlFactory"
            type="java.util.Map">
      </control>
      <control
            id="org.jboss.tools.jmx.ui.attribute.displays.CompositeData"
            class="org.jboss.tools.jmx.ui.internal.controls.CompositeDataControlFactory"
            type="javax.management.openmbean.CompositeData">
      </control>
      <control
            id="org.jboss.tools.jmx.ui.attribute.displays.TabularData"
            class="org.jboss.tools.jmx.ui.internal.controls.TabularDataControlFactory"
            type="javax.management.openmbean.TabularData">
      </control>
   </extension>
   <extension
         point="org.jboss.tools.jmx.ui.providerUI">
      <providerUI
            icon="icons/full/obj16/write_obj.gif"
            id="org.jboss.tools.jmx.core.providers.DefaultConnectionProvider"
            name="%DefaultJMXConnectionProvider.name">
         <wizardPage
               class="org.jboss.tools.jmx.ui.internal.wizards.DefaultConnectionWizardPage">
         </wizardPage>
      </providerUI>
   </extension>



     <extension
         point="org.eclipse.ui.views.properties.tabbed.propertyContributor">

      <propertyContributor contributorId="org.jboss.tools.jmx.ui.internal.views.navigator.MBeanExplorer">
         <propertyCategory category="org.jboss.tools.jmx.ui.views"/>
      </propertyContributor>
   </extension>
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertyTabs">
      <propertyTabs contributorId="org.jboss.tools.jmx.ui.internal.views.navigator.MBeanExplorer">
         <propertyTab
               category="org.jboss.tools.jmx.ui.views"
               id="org.jboss.tools.jmx.ui.views.PropertiesTab"
               label="Properties"/>
         <propertyTab
               afterTab="org.jboss.tools.jmx.ui.views.PropertiesTab"
               category="org.jboss.tools.jmx.ui.views"
               id="org.jboss.tools.jmx.ui.views.ContentsTab"
               label="Contents"/>
      </propertyTabs>
   </extension>
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertySections">
      <propertySections contributorId="org.jboss.tools.jmx.ui.internal.views.navigator.MBeanExplorer">
         <propertySection
               class="org.eclipse.ui.views.properties.tabbed.AdvancedPropertySection"
               filter="org.jboss.tools.jmx.ui.internal.propertysheet.PropertiesSectionFilter"
               id="PropertiesSection"
               tab="org.jboss.tools.jmx.ui.views.PropertiesTab">
         </propertySection>

         <propertySection
               class="org.jboss.tools.jmx.ui.internal.propertysheet.ContentsTabSection"
               filter="org.jboss.tools.jmx.ui.internal.propertysheet.ContentsSectionFilter"
               id="ContentsSection"
               tab="org.jboss.tools.jmx.ui.views.ContentsTab">
         </propertySection>
      </propertySections>
   </extension>
   <!--
   <extension
         point="org.eclipse.ui.dropActions">
      <action
            class="org.jboss.tools.jmx.ui.internal.views.navigator.DropActionDelegate"
            id="org.jboss.tools.jmx.ui.internal.views.navigator.dropAction">
      </action>
   </extension>
   -->
   <!-- Decorator for connected / disconnected -->
   <extension point="org.eclipse.ui.decorators">
      <decorator
            class="org.jboss.tools.jmx.ui.internal.views.navigator.JMXConnectionDecorator"
            id="org.jboss.tools.jmx.ui.internal.views.navigator.JMXConnectionDecorator"
            label="JMX Connection Decorator"
            lightweight="true"
            location="BOTTOM_RIGHT"
            state="true">
         <enablement>
            <or>
               <objectClass name="org.jboss.tools.jmx.core.IConnectionWrapper"/>
            </or>
         </enablement>
      </decorator>
   </extension>

</plugin>
