<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="%javaMonitorCagetoryName" id="org.jboss.tools.jmx.jvmmonitor.ui">
      </category>
      <view
            name="%jvmExplorerName"
            icon="icons/full/eview16/vm_explorer.png"
            category="org.jboss.tools.jmx.jvmmonitor.ui"
            class="org.jboss.tools.jmx.jvmmonitor.internal.ui.views.JvmExplorer"
            id="org.jboss.tools.jmx.jvmmonitor.ui.JvmExplorer">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.jboss.tools.jmx.jvmmonitor.internal.ui.JavaMonitorPerspectiveFactory"
            icon="icons/full/eview16/monitor_persp.png"
            id="org.jboss.tools.jmx.jvmmonitor.ui.JavaMonitorPerspective"
            name="%javaMonitorPerspectiveName">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.jboss.tools.jmx.jvmmonitor.ui.JavaMonitorPerspective">
         <actionSet
               id="org.eclipse.jdt.ui.JavaActionSet">
         </actionSet>
      </perspectiveExtension>
   </extension>
   
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertyContributor">
      <propertyContributor
            contributorId="org.jboss.tools.jmx.jvmmonitor.ui.JvmExplorer"
            labelProvider="org.jboss.tools.jmx.jvmmonitor.internal.ui.properties.TitleProvider">
         <propertyCategory
               category="monitor"></propertyCategory>
      </propertyContributor>
   </extension>
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertyTabs">
      <propertyTabs
            contributorId="org.jboss.tools.jmx.jvmmonitor.ui.JvmExplorer">
         <propertyTab
               category="monitor"
               id="org.jboss.tools.jmx.jvmmonitor.ui.overviewTab"
               label="%overviewTabLabel">
         </propertyTab>
         <propertyTab
               afterTab="org.jboss.tools.jmx.jvmmonitor.ui.overviewTab"
               category="monitor"
               id="org.jboss.tools.jmx.jvmmonitor.ui.mbeansTab"
               label="%mbeansTabLabel">
         </propertyTab>
         <propertyTab
               category="monitor"
               afterTab="org.jboss.tools.jmx.jvmmonitor.ui.mbeansTab"
               id="org.jboss.tools.jmx.jvmmonitor.ui.timelineTab"
               label="%timelineTabLabel">
         </propertyTab>
         <propertyTab
               afterTab="org.jboss.tools.jmx.jvmmonitor.ui.timelineTab"
               category="monitor"
               id="org.jboss.tools.jmx.jvmmonitor.ui.threadsTab"
               label="%threadsTabLabel">
         </propertyTab>
         <propertyTab
               afterTab="org.jboss.tools.jmx.jvmmonitor.ui.threadsTab"
               category="monitor"
               id="org.jboss.tools.jmx.jvmmonitor.ui.memoryTab"
               label="%memoryTabLabel">
         </propertyTab>
         <propertyTab
               afterTab="org.jboss.tools.jmx.jvmmonitor.ui.memoryTab"
               category="monitor"
               id="org.jboss.tools.jmx.jvmmonitor.ui.cpuTab"
               label="%cpuTabLabel">
         </propertyTab>
      </propertyTabs>
   </extension>
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertySections">
      <propertySections
            contributorId="org.jboss.tools.jmx.jvmmonitor.ui.JvmExplorer">
         <propertySection
               class="org.jboss.tools.jmx.jvmmonitor.internal.ui.properties.overview.OverviewSection"
               id="org.jboss.tools.jmx.jvmmonitor.ui.overviewSection"
               tab="org.jboss.tools.jmx.jvmmonitor.ui.overviewTab">
            <input
                  type="org.jboss.tools.jmx.jvmmonitor.core.IActiveJvm">
            </input>
            <input
                  type="org.jboss.tools.jmx.jvmmonitor.core.IJvmFacade">
            </input>
         </propertySection>
         <propertySection
               class="org.jboss.tools.jmx.jvmmonitor.internal.ui.properties.timeline.TimelineSection"
               id="org.jboss.tools.jmx.jvmmonitor.ui.timelineSection"
               tab="org.jboss.tools.jmx.jvmmonitor.ui.timelineTab">
            <input
                  type="org.jboss.tools.jmx.jvmmonitor.core.IActiveJvm">
            </input>
            <input
                  type="org.jboss.tools.jmx.jvmmonitor.core.IJvmFacade">
            </input>
         </propertySection>
         <propertySection
               class="org.jboss.tools.jmx.jvmmonitor.internal.ui.properties.thread.ThreadsSection"
               id="org.jboss.tools.jmx.jvmmonitor.ui.threadsSection"
               tab="org.jboss.tools.jmx.jvmmonitor.ui.threadsTab">
            <input
                  type="org.jboss.tools.jmx.jvmmonitor.core.IActiveJvm">
            </input>
            <input
                  type="org.jboss.tools.jmx.jvmmonitor.core.IJvmFacade">
            </input>
         </propertySection>
         <propertySection
               class="org.jboss.tools.jmx.jvmmonitor.internal.ui.properties.memory.MemorySection"
               id="org.jboss.tools.jmx.jvmmonitor.ui.memorySection"
               tab="org.jboss.tools.jmx.jvmmonitor.ui.memoryTab">
            <input
                  type="org.jboss.tools.jmx.jvmmonitor.core.IActiveJvm">
            </input>
            <input
                  type="org.jboss.tools.jmx.jvmmonitor.core.IJvmFacade">
            </input>
         </propertySection>
         <propertySection
               class="org.jboss.tools.jmx.jvmmonitor.internal.ui.properties.cpu.CpuSection"
               id="org.jboss.tools.jmx.jvmmonitor.ui.cpuSection"
               tab="org.jboss.tools.jmx.jvmmonitor.ui.cpuTab">
            <input
                  type="org.jboss.tools.jmx.jvmmonitor.core.IActiveJvm">
            </input>
            <input
                  type="org.jboss.tools.jmx.jvmmonitor.core.IJvmFacade">
            </input>
         </propertySection>
         <propertySection
               class="org.jboss.tools.jmx.jvmmonitor.internal.ui.properties.mbean.MBeansSection"
               id="org.jboss.tools.jmx.jvmmonitor.ui.mbeansSection"
               tab="org.jboss.tools.jmx.jvmmonitor.ui.mbeansTab">
            <input
                  type="org.jboss.tools.jmx.jvmmonitor.core.IActiveJvm">
            </input>
            <input
                  type="org.jboss.tools.jmx.jvmmonitor.core.IJvmFacade">
            </input>
         </propertySection>
      </propertySections>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.jboss.tools.jmx.jvmmonitor.internal.ui.editors.CpuDumpEditor"
            default="true"
            extensions="cpu"
            icon="icons/full/obj16/cpu_dump.gif"
            id="org.jboss.tools.jmx.jvmmonitor.ui.dump.cpu"
            name="%cpuDumpEditorName">
      </editor>
      <editor
            class="org.jboss.tools.jmx.jvmmonitor.internal.ui.editors.ThreadDumpEditor"
            contributorClass="org.jboss.tools.jmx.jvmmonitor.internal.ui.editors.ThreadActionContributor"
            default="false"
            extensions="thread"
            icon="icons/full/obj16/thread_dump.gif"
            id="org.jboss.tools.jmx.jvmmonitor.ui.dump.thread"
            name="%threadDumpEditorName">
      </editor>
      <editor
            class="org.jboss.tools.jmx.jvmmonitor.internal.ui.editors.HeapDumpEditor"
            default="false"
            extensions="heap"
            icon="icons/full/obj16/heap_dump.gif"
            id="org.jboss.tools.jmx.jvmmonitor.ui.dump.heap"
            name="%heapDumpEditorName">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.jboss.tools.jmx.jvmmonitor.internal.ui.JavaMonitorPreferencePage"
            id="org.jboss.tools.jmx.jvmmonitor.ui.JavaMonitorPreferencePage"
            name="%monitorPreferencePageName">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.jboss.tools.jmx.jvmmonitor.internal.ui.PreferenceInitializer">
      </initializer>
   </extension>
</plugin>
